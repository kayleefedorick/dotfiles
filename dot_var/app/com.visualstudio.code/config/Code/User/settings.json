{
    // Use zsh for terminal
    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.integrated.profiles.linux": {
        "zsh (Host)": {
            "path": "/usr/bin/flatpak-spawn",
            "args": ["--host", "--env=TERM=xterm-256color", "zsh"],
            "overrideName": true,
        },
        "bash (Host)": {
            "path": "/usr/bin/flatpak-spawn",
            "args": ["--host", "--env=TERM=xterm-256color", "bash"],
            "overrideName": true,
        }
    },

    // Launch alacritty for external terminal
    "terminal.external.linuxExec": "alacritty",

    // Telemetry
    "redhat.telemetry.enabled": true,

    // Appearance
    "workbench.colorTheme": "Dracula Theme",
    "window.zoomLevel": 0.4,

    // Editor font
    "editor.fontLigatures": true,
    "editor.fontFamily": "'DroidSansM Nerd Font', 'monospace', monospace",
    
    // Terminal font
    "terminal.integrated.fontFamily": "DroidSansM Nerd Font Mono",
    "terminal.integrated.fontWeight": "normal",
    "terminal.integrated.fontWeightBold": "normal",

    // --- Edits by VSCode below ----
    
}